{% extends 'base.html.twig' %}

{% block title %}Hello BrokerController!{% endblock %}

{% block body %}
    {% for item in items %}
        <img src="{{ item.imgUrl }}" alt="">
        <p>Nom: {{ item.name }}</p>
        <p>level : {{ item.level }} </p>
        <p>Type : {{ item.type }}</p>
        <p>
        Statistiques : 
        <ul>
            {% for stat in item.itemStatistics %}
                <li><p>{{ stat.statistic.name }} : {{ stat.quantity }}</p></li>
            {% endfor %}
        </ul>
        <p>
        Recette
        <ul>
            {% for ingredient in item.itemIngredients %}
                <li><p>{{ ingredient.ingredient.name }} : {{ ingredient.quantity }}</p></li>
            {% endfor %}
        </ul>
        </p>
        </p>
    {% endfor %}
{% endblock %}
